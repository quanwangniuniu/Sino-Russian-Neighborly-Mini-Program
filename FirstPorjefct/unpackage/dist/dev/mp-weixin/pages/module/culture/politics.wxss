
.trade-page {
  position: relative;
  height: 100vh;
}
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 80%;
  z-index: -1;
}
.content {
  padding: 20px;
  color: #000000;
}
.section {
  margin-bottom: 20px;
}
.section-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.section-image {
  width: 100%;
  height: 250px;
  margin-bottom: 20px;
}
.section-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}
.section-description {
  font-size: 16px;
}
