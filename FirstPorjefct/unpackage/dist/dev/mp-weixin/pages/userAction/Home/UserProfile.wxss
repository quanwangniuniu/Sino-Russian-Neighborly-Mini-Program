/* 调整开关按钮样式 */
.switch.data-v-442d0846 {
  position: relative;
  display: inline-block;
  width: 40px;
  height: 20px;
  margin-left: 10px;
}
.switch input.data-v-442d0846 {
  opacity: 0;
  width: 0;
  height: 0;
}
.slider.data-v-442d0846 {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ccc;
  transition: .4s;
  border-radius: 20px;
}
.slider.data-v-442d0846:before {
  position: absolute;
  content: "";
  height: 14px;
  width: 14px;
  left: 3px;
  bottom: 3px;
  background-color: white;
  transition: .4s;
  border-radius: 50%;
}
input:checked + .slider.data-v-442d0846 {
  background-color: #007bff;
}
input:focus + .slider.data-v-442d0846 {
  box-shadow: 0 0 1px #007bff;
}
input:checked + .slider.data-v-442d0846:before {
  transform: translateX(20px);
}
.slider.round.data-v-442d0846 {
  border-radius: 34px;
}
.slider.round.data-v-442d0846:before {
  border-radius: 50%;
}

